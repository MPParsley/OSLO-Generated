@prefix org: <http://www.w3.org/ns/org#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix shacl: <http://www.w3.org/ns/shacl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<https://data.vlaanderen.be/shacl/museum-basis> <https://data.vlaanderen.be/shacl/museum-basisshapes> <https://data.vlaanderen.be/shacl/museum-basis#MuseumShape>,
    <https://data.vlaanderen.be/shacl/museum-basis#OrganisatieShape>,
    <https://data.vlaanderen.be/shacl/museum-basis#TaalstringShape> .

<https://data.vlaanderen.be/shacl/museum-basis#MuseumShape> a shacl:NodeShape;
  shacl:closed false;
  shacl:targetClass <https://icomvl.be/ns/museum#Museum> .

<https://data.vlaanderen.be/shacl/museum-basis#OrganisatieShape> a shacl:NodeShape;
  shacl:closed false;
  shacl:property [
    shacl:datatype rdf:langString;
    shacl:description "Naam waarmee de organisatie bij voorkeur wordt aangeduid.";
    shacl:maxCount 1;
    shacl:minCount 1;
    shacl:name "voorkeursnaam";
    shacl:path skos:prefLabel
  ];
  shacl:targetClass org:Organization .

<https://data.vlaanderen.be/shacl/museum-basis#TaalstringShape> a shacl:NodeShape;
  shacl:closed false;
  shacl:targetClass rdf:langString .
